

<LinearLayout
    android:id="@+id/botmsg"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:translationZ="-1dp"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"

        android:padding="16dp"
        android:background="@drawable/botmsgbg"
        android:layout_marginRight="70dp">

        <TextView
            android:id="@+id/botmsgtxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppinsregular"
            android:gravity="start"
            android:text="Hey creatives , today I'll share with you few screens I did for a BOT management"
            android:textColor="@color/black"
            android:textSize="12dp"
            android:layout_marginRight="20dp"/>

        <ImageView
            android:id="@+id/botsound"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:clickable="true"
            android:layout_marginLeft="-14dp"
            android:layout_marginTop="10dp"
            android:focusable="true"
            app:srcCompat="@drawable/volume" />

    </LinearLayout>
    <TextView
        android:id="@+id/botmsgtime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppinsregular"
        android:gravity="start"
        android:text="22:46 PM"
        android:layout_marginTop="4dp"
        android:textColor="@color/grey"
        android:textSize="12dp"
        android:layout_marginRight="20dp"/>


</LinearLayout>
